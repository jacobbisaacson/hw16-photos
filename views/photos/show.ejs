<%- include('../partials/header.ejs') %>

  <h2><%= photo.title %></h2>

  <div>
    <a href="/photos/<%= photo.id %>/edit">(Edit <%= photo.title %>)</a>
  </div>


  <!-- https://github.com/expressjs/method-override#override-using-a-query-value -->
  <form method="POST" action="/photos/<%= photo.id %>?_method=DELETE">
    <button>Delete <%= photo.title %></button>
  </form>

